<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context="com.app2m.demo.mymp4parser.MuxActivity"
	android:background="#333333">
	<LinearLayout
		android:id="@+id/mux_audio_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#555555"
		android:padding="5dp"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_alignParentTop="true">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="音频："
				/>
			<TextView
				android:id="@+id/mux_audio_filename"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="2">
			<Button
				android:id="@+id/mux_audio_btn_play"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="播放"
				android:onClick="muxPlayAudio"/>
			<Button
				android:id="@+id/mux_audio_btn_stop"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="停止"
				android:onClick="muxStopAudio"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/mux_video_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@id/mux_audio_layout"
		android:padding="5dp"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="视频："
			/>
		<TextView
			android:id="@+id/mux_video_filename"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>
	</LinearLayout>
	<View
		android:id="@+id/mux_audio_line"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#696969"
		android:layout_below="@id/mux_video_layout"
		android:padding="5dp"/>
	<Button
		android:id="@+id/mux_process_btn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="开始"
		android:layout_alignParentBottom="true"
		android:onClick="doMux"
		android:padding="5dp"/>
	<LinearLayout
		android:id="@+id/mux_range_seek_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_above="@id/mux_process_btn"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:paddingBottom="15dp"
		>
		<com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
			android:id="@+id/mux_range_seek_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>
	</LinearLayout>
	<View
		android:id="@+id/mux_seek_bar_line"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#696969"
		android:layout_above="@id/mux_range_seek_layout"
		/>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/mux_seek_bar_line"
		android:layout_below="@id/mux_audio_line"
		>
		<VideoView
			android:id="@+id/mux_video_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center"
			/>
	</FrameLayout>
</RelativeLayout>
